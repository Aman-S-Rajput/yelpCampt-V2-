<%= layout('../layouts/boilerplate.ejs') %>

<div class="container my-5">
  <h1 class="mb-4">All Campgrounds</h1>
  <div class="mb-3">
    <a href="/campground/new" class="btn btn-success">Add Camp</a>
  </div>
  <div class="row gy-4">
    <% for(let camp of campgrounds) { %>
    <div class="col-12">
      <div class="card shadow" style="max-width: 900px; margin: auto">
        <div class="row g-0">
          <div class="col-md-4">
            <img
              src="<%= camp.image %>"
              class="img-fluid rounded-start"
              alt="<%= camp.title %>"
            />
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= camp.title %></h5>
              <h6 class="card-subtitle mb-2 text-muted">
                <%= camp.location %>
              </h6>
              <p class="card-text text-truncate" style="max-width: 500px">
                <%= camp.description %>
              </p>
              <a href="/campground/<%= camp._id %>" class="btn btn-primary"
                >View Campground</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
